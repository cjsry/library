}
.booktype:before{
    left: 0;
    border-left: 1rpx solid rgba(0,0,0,.1);
}
.booktype:before,.booktype:after{
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    width: 1px;
    color:rgba(0,0,0,.1);
}
