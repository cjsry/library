/* pages/onlyusers/firstuser_manager.wxss */

.all{
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background-color: white;
    gap: 0;
    z-index: 0;
}

.word_block{ 
    position: absolute;
    top: 0;
    padding: 0 20% 0 20%;
    font-size: 50rpx; 
}
.word{
    color: #9999ff;
}
.table-header{
    width: 80%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.table-body{
    width: 80%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 10%;
}
.tr {
    width: 25%;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx ;
}
.btm{
    width: 100%;
    display: flex;
    font-size: 30rpx;
    background-color: white;
    
}
  
.th {
    font-weight: bold;
    padding: 20rpx 10rpx;
    color: #327030;
}
  
.td {
    padding: 20rpx 10rpx;
    word-break: break-all;
}
  
.tr:active {
    background-color: #f0f0f0;
}

.add{
    z-index: 1;
    border: 1rpx solid black;
    width: 70%;
    height: 40%;
    position: absolute;
    top: 20%;
    right: 15%;
    background-color: white;
    opacity: 0.8;
    display: flex;
}
.left{
    width: 95%;
    height: 100%;
    margin: 10rpx 0 10rpx 20rpx;
    position: relative;
}
.right{
    width: 5%;
    height: 100%;
    position: relative;
}
.closebtn{
    position: absolute;
    top: 0;
    right: 0;
    width: 400%;
}

.left_word_block{
    width: 100%;
    margin-top: 50rpx;
    text-align: center;
}
.left_word{
    font-size: 35rpx;
}
.inp_block{
    display: flex;
    align-items: center;
    justify-content:space-between;
    margin-top: 50rpx;
    width: 100%;
}
.img_input{
    width: 50rpx;
    height: 50rpx;
}
.inp_text{
    width: 200rpx;
}

.btn{
    display: flex;
}