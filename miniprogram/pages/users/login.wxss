/* pages/users/login.wxss */

.all{
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background-color: white;
    gap: 0;
}
.word_block{
    position: absolute;
    top: 0;
    padding: 30% 20% 0 20%;
    font-size: 90rpx; 
}
.word{
    color: #9999ff;
}
.input_block{
    margin-top: 3%;
    border: 1px solid #9999ff;
    display: flex;
    width: 60%;
    height: 6%;
    align-items: center;
    justify-content:space-between;
}

.img_input{
    width: 50rpx;
    height: 50rpx;
}

.button{
    border-radius:50rpx;
    width: 50%;
    height: 8%;
    margin-top: 3%;
    align-items: center;
}